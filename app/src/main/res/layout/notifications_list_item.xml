<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/llNotification"
    android:background="@color/notifications_bg_color_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twentydp"
        android:layout_marginEnd="@dimen/tendp"
        android:layout_marginTop="@dimen/twentydp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/twentydp"
        android:tint="@color/white"
        android:src="@drawable/ic_notification_close"
        android:contentDescription="@string/app_name">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/tendp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/twentydp">
        <com.jambacabs.driver.font.CustomTextView
            android:id="@+id/tvNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tendp"
            android:layout_gravity="center_vertical"
            app:name="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/twentysp">

        </com.jambacabs.driver.font.CustomTextView>

        <com.jambacabs.driver.font.CustomTextView
            android:id="@+id/tvReceivedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:name="bold"
            android:textColor="@color/black"
            android:textSize="15sp">

        </com.jambacabs.driver.font.CustomTextView>


    </LinearLayout>

</LinearLayout>