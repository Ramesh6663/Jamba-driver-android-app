<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="@dimen/tendp"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="horizontal"
   android:padding="@dimen/twentydp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onClick"
            android:src="@drawable/ic_account_gray"
            android:tint="@color/white"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fifteendp"
        android:orientation="vertical">

        <com.jambacabs.driver.font.CustomTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="2"
            android:text="Dharma Teja Kanneganti"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:name="bold"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="46dp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivStar"
                android:layout_width="@dimen/fifteendp"
                android:layout_height="@dimen/fifteendp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_star_black"
                android:tint="@color/white"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="71dp">
            </ImageView>

            <com.jambacabs.driver.font.CustomTextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="2"
                android:text="4.60"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:name="bold"
                tools:layout_editor_absoluteX="97dp"
                tools:layout_editor_absoluteY="68dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
